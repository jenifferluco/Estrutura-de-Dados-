/* Faça um programa que media dois numeros
ideal trabalhar com float*/

#include<stdio.h>
#include<conio.h>
#include<locale.h>

  int main() {
    setlocale(LC_ALL,"Portuguese");
float n1, n2, soma, media;


printf("digite a primeiro numero ");
// precisa que salve o n1 utilizando &n1
scanf("%f", &n1);


printf("digite segundo numero ");
scanf("%f", &n2);


//atribuição de dados 
soma=n1+n2;
media=soma/2;

// neste print utilizamos %f float e na soma não precisa &
// caso eu queira casa depois da virgula %.2f
printf("é a media de dois numeros digitados é %.2f",media);

  
    getch();
    return 0;
}
